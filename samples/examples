# type system
type Animal:
	property color is int.
	property weight is float.

	operation eat int x: int ->
		weight <- weight + x.
		return weight.
	.
.

type Dog is Animal:

	override eat int x: int ->
		weight <- (weight + x) * 2.
		return weight.
	.
.

#breakpoint
breakpoint.

