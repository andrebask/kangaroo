sum: 2 3.

# switch
match key:
   1 2 3,
      x <- x * x.
      return x.
   4 5 6,
      y <- y * x.
      incr y.
      return y.
   , return x.
.

# lambda
[int x, int y: int] ->
	x <- x * y.
	return x.
.

