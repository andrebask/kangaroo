# if
if expr, expr. else if expr., expr.. else expr. .

if x > 2,
	incr x.
	return 1.
else if x < 1,
	decr x.
	return 1.
else if x eq 1,
	decr z.
	return 1.
else
	return 0.
.

#func definition
dec sum int x, int y : int -> return x + y..

